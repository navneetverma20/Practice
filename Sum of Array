Enter the size of the array: 5
Enter the elements: 2 7 1 -4 11
Sum of the elements is: 17


#include<iostream>
using namespace std;

int main(){
    int arr[30];
    
    int size;
    cout<<"Enter the size of the array: ";
    cin>>size;

    cout<<"Enter the elements: ";
    for(int i=0; i<size; i++){
        cin>>arr[i];
    }

    int sum=0;
    for(int i=0; i<size; i++){
        sum = sum+arr[i];
    }

    cout<<"Sum of the elements is: "<< sum;
}
