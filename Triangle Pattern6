Enter no. of rows: 3
A 
B B 
C C C 

#include<iostream>
using namespace std;

int main(){
    int n;
    cout<<"Enter no. of rows: ";
    cin>>n;

    int row=1;
    while(row<=n){
        int col=1;
        char ch = 64+row;
        while(col<=row){
            cout<<ch<<" ";
            col = col+1;
        }
        cout<<endl;
        row = row+1;
    }
}
