Enter the no. of rows: 4
* 
* * 
* * * 
* * * * 

Enter the no. of rows: 7
* 
* * 
* * * 
* * * * 
* * * * * 
* * * * * * 
* * * * * * * 


#include <iostream>
using namespace std;

int main(){
    int n;
    cout<<"Enter the no. of rows: ";
    cin>>n;

    int i=1, j=1;
    while(i <= n){
        cout<<"* ";
        if(j == i){
            cout<<endl;
            i++;
            j=1;
            continue;
        }
        j++;
    }
}
