Enter no. of rows: 4
   1
  22
 333
4444

#include<iostream>
using namespace std;

int main(){
    int n;
    cout<<"Enter no. of rows: ";
    cin>>n;

    int row=1;
    while(row<=n){
        int space = n-row;
        while(space){
            cout<<" ";
            space = space-1;
        }
        int col=1;
        while(col<=row){
            cout<<row;
            col = col+1;
        }
        cout<<endl;
        row = row+1;
    }
}
