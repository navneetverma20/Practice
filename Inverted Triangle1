Enter no. of rows: 4
****
***
**
*

#include<iostream>
using namespace std;

int main(){
    int n;
    cout<<"Enter no. of rows: ";
    cin>>n;

    int row=1;
    int value=n;
    while(row<=n){
        int col=1;
        while(col<=value){
            cout<<"*";
            col = col+1;
        }
        cout<<endl;
        row = row+1;
        value = value-1;
    }
}
